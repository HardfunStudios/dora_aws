{
  "openapi": "3.0.0",
  "info": {
    "title": "Moodle User Data API",
    "version": "1.0.0",
    "description": "This is a simple API to get user data from Moodle WebServices."
  },
  "paths": {
    "/grades": {
      "post": {
        "summary": "Get a list of all grades",
        "description": "Get the list of all final grades of a user. Requires the user to be logged in. Requires the username. Returns the course names and grades.",
        "operationId": "Get Grades",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string",
                    "description": "Username. Required parameter."
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Get a list of all grades",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "course_name": {
                        "type": "string",
                        "description": "Name of the course"
                      },
                      "grade": {
                        "type": "number",
                        "description": "Final grade of the user in the course"
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "User not found."
          }
        }
      }
    }
  }
}