{
  "openapi": "3.0.0",
  "info": {
    "title": "Moodle User Data API",
    "version": "1.0.0",
    "description": "This is a simple API to get user data from Moodle WebServices."
  },
  "paths": {
    "/events": {
      "post": {
        "summary": "Get a list of all events",
        "description": "Get the list of all events (assignments) of a user. Requires the user to be logged in. Requires the username. Returns the events' name, date, link and course.",
        "operationId": "Get Events",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string",
                    "description": "Username. Required parameter."
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Get a list of all events",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string",
                        "description": "Name of the event or assignemnt"
                      },
                      "due_date": {
                        "type": "string",
                        "description": "Date of the event or assignemnt"
                      },
                      "course_name": {
                        "type": "string",
                        "description": "Course of the event or assignemnt"
                      },
                      "view_url": {
                        "type": "string",
                        "description": "Link to the event or assignemnt on Moodle"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}